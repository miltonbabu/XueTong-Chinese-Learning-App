{
  "version": 2,
  "name": "xuetong-app",
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/netlify/functions/api/chat.js"
    },
    {
      "src": "/api/online-count",
      "dest": "/netlify/functions/api/online-count.js"
    },
    {
      "src": "/api/ping",
      "dest": "/netlify/functions/api/ping.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "outputDirectory": ".",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "netlify/functions/api/chat.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "netlify/functions/api/online-count.js": {
      "memory": 512,
      "maxDuration": 10
    },
    "netlify/functions/api/ping.js": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/xuetong-latest.html"
    }
  ]
}
